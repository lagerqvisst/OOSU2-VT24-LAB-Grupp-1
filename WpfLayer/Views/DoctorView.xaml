<Window x:Class="WpfLayer.Views.DoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayer.Views"
        mc:Ignorable="d"
        Title="DoctorView" Height="601" Width="800">






    <DockPanel LastChildFill="True">
        <!--MENY START -->
        <Menu DockPanel.Dock="Top" Background="Silver">
            <MenuItem Header="_File" Background="White">
                <MenuItem Header="Sign out"  Command="{Binding Path=DataContext.SignOutCmd, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Background="Red"></MenuItem>

            </MenuItem>
        </Menu>
        <!--MENY SLUT -->

        <!--STATUS MESSAGE START -->
        <StatusBar DockPanel.Dock="Bottom" Background="Silver">
            <TextBlock Text="{Binding DoctorName}" FontStyle="Italic" ></TextBlock>

        </StatusBar>
        <!--STATUS MESSAGE slut -->

        <!--LÄKARBESÖK FÖR DOCTOR START -->
        <Grid Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="464.368"></ColumnDefinition>
                <ColumnDefinition Width="47.752"/>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="89*"/>
                <ColumnDefinition Width="179*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Margin="10,10,10,10" Grid.ColumnSpan="2">
                <Label Content="Select an appointment below to proceed" FontWeight="DemiBold"></Label>
                <DataGrid Name="dgAppointment" ItemsSource="{Binding Appointments}" SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}" AutoGenerateColumns="False" Background="#CEE6F2" >

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Appointment ID" Binding="{Binding appointmentId}" />
                        <DataGridTextColumn Header="Patient Name" Binding="{Binding patientName}" />
                        <DataGridTextColumn Header="Date" Binding="{Binding appointmentDate}" />
                        <DataGridTextColumn Header="Reason" Binding="{Binding appointmentReason}" />
                        <DataGridTextColumn Header="Doctor" Binding="{Binding doctorName}" />
                        <DataGridTextColumn Header="Note from doctor" Binding="{Binding doctorsNote}" />
                        <DataGridTextColumn Header="Scheduled by" Binding="{Binding receptionistName}" />


                    </DataGrid.Columns>

                </DataGrid>

                <Button  Content="Choose appointment"  x:Name="btnChosenAppointment" Width="250" HorizontalAlignment="Left" Margin="0,30,0,0" Background="LightGreen" 
                         Command="{Binding Path=DataContext.OpenAppMgmtCmd, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                         CommandParameter="{Binding ElementName=SelectedAppointment, Path=SelectedItem}" FontFamily="Gineva" Height="25"  MaxWidth="160" FontWeight="UltraLight">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>


        </Grid>


        <!--LÄKARBESÖK FÖR DOCTOR SLUT -->

    </DockPanel>
</Window>
