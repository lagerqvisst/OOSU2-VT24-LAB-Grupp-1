<Window x:Class="WpfLayer.Views.DoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayer.Views"
        mc:Ignorable="d"
        Title="DoctorView" SizeToContent="WidthAndHeight">

    <DockPanel LastChildFill="True">
        <!--MENY START -->
        <Menu DockPanel.Dock="Top" Background="Silver">
            <MenuItem Header="_File" Background="White">
                <MenuItem Header="Sign out"  Command="{Binding Path=DataContext.SignOutCmd, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Background="Red"></MenuItem>
            </MenuItem>
        </Menu>
        <!--MENY SLUT -->

        <!--STATUS MESSAGE START -->
        <StatusBar DockPanel.Dock="Bottom" Background="Silver">
            <TextBlock Text="{Binding DoctorName}" FontStyle="Italic" ></TextBlock>
        </StatusBar>
        <!--STATUS MESSAGE slut -->

        <!--LÄKARBESÖK FÖR DOCTOR START -->
        <Grid Background="LightGray">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Margin="10,10,10,10" Grid.ColumnSpan="1">
                <Label Content="Select an appointment below to proceed" FontWeight="DemiBold"></Label>
                <DataGrid Name="dgAppointment" ItemsSource="{Binding Appointments}" SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}" AutoGenerateColumns="False" Background="#CEE6F2" >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="App ID" Binding="{Binding appointmentId}" Width="50" />
                        <DataGridTextColumn Header="Patient Name" Binding="{Binding patientName}" Width="Auto" />
                        <DataGridTextColumn Header="Date" Binding="{Binding appointmentDate}" Width="Auto" />
                        <DataGridTextColumn Header="Reason" Binding="{Binding appointmentReason}" Width="50" />
                        <DataGridTextColumn Header="Doctor" Binding="{Binding doctorName}" Width="Auto" />
                        <DataGridTextColumn Header="Doctors note" Binding="{Binding doctorsNote}" Width="80"/>
                        <DataGridTextColumn Header="Scheduled by" Binding="{Binding receptionistName}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button  Content="Choose appointment"  x:Name="btnChosenAppointment" Width="250" HorizontalAlignment="Left" Margin="0,30,0,0" Background="LightGreen" 
                         Command="{Binding Path=DataContext.OpenAppMgmtCmd, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                         CommandParameter="{Binding ElementName=SelectedAppointment, Path=SelectedItem}" FontFamily="Gineva" Height="25"  MaxWidth="160" FontWeight="UltraLight">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <Button Grid.Column="3" Content="Show expanded details" Command="{Binding DataGridShowDetailsCmd}" Width="200" Height="30"  FontSize="13" FontStyle="Italic" HorizontalAlignment="Right"  Padding="4" Background="Bisque" Margin="10,10,0,0"></Button>

        </Grid>


        <!--LÄKARBESÖK FÖR DOCTOR SLUT -->

    </DockPanel>
</Window>
